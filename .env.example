# Database
DATABASE_URL="postgresql://postgres:postgres@127.0.0.1:54322/postgres"

# GitHub Integration
# GitHub App ID (find this on your GitHub App's settings page)
GITHUB_APP_ID="your_app_id"

# GitHub App Name (URL-friendly version of your GitHub App's name, e.g., "my-jules-queue-app")
# This is used to construct the installation link.
GITHUB_APP_NAME="your-github-app-name"

# GitHub App Private Key (content of the .pem file generated for your GitHub App)
# Ensure to format it correctly if pasting as a single line (e.g., replace actual newlines with \n)
# Example: "-----BEGIN RSA PRIVATE KEY-----\nMIIE...your...key...\n-----END RSA PRIVATE KEY-----"
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_PRIVATE_KEY_CONTENT_HERE\n-----END RSA PRIVATE KEY-----"

# GitHub App Installation ID (optional, can often be derived from webhooks)
# If your app targets a single, specific installation, you can set this.
# Find it in the URL when configuring an installed GitHub App or from 'installation' webhook event.
GITHUB_APP_INSTALLATION_ID="your_app_installation_id"

# GitHub Webhook Secret (generate a random string)
# Used to verify incoming webhooks from your GitHub App
# Ensure this matches the secret in your GitHub App's webhook settings
GITHUB_WEBHOOK_SECRET="your-webhook-secret-here"

# Application URL (publicly accessible base URL of your deployed application)
# Used for constructing GitHub App callback URLs etc.
# Example: http://localhost:3000 for local dev, https://your-app.com for production
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Cron job verification token
CRON_SECRET="1234567890"

# Development
NODE_ENV="development"
__NEXT_TEST_MODE="1"
